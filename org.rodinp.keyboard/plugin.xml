<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="symbols" name="Keyboard symbols" schema="schema/symbols.exsd"/>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eventb.ui.perspective.eventb">
         <view
               id="org.rodinp.keyboard.views.KeyboardView"
               ratio="0.5"
               relationship="right"
               relative="org.eventb.ui.views.RodinProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.rodinp.category"
            name="%RODINCategoryName">
      </category>
      <view
            category="org.rodinp.category"
            class="org.rodinp.internal.keyboard.views.KeyboardView"
            icon="icons/keyboard.gif"
            id="org.rodinp.keyboard.views.KeyboardView"
            name="%RODINKeyboardViewName">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.themes">
      <themeElementCategory
            id="org.rodinp.keyboard.presentation"
            label="%rodinPresentation.label">
      </themeElementCategory>
      <fontDefinition
            categoryId="org.rodinp.keyboard.presentation"
            defaultsTo="org.rodinp.keyboard.braveSansMono"
            id="org.rodinp.keyboard.textFont"
            isEditable="true"
            label="%rodinKeyboardFontDefinition.label">
         <description>
            %rodinKeyboardFontDefinition.description
         </description>
      </fontDefinition>
      <fontDefinition
            id="org.rodinp.keyboard.braveSansMono"
            isEditable="false"
            label="%rodinKeyboardBraveSansMono.label"
            value="Brave Sans Mono-regular-10">
         <description>
            %rodinKeyboardBraveSansMono.description
         </description>
      </fontDefinition>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc/toc.xml"
            primary="true">
      </toc>
      <toc
            file="toc/tocconcepts.xml"
            primary="false">
      </toc>
      <toc
            file="toc/tocgettingstarted.xml"
            primary="false">
      </toc>
      <toc
            file="toc/tocreference.xml"
            primary="false">
      </toc>
      <toc
            file="toc/tocsamples.xml"
            primary="false">
      </toc>
      <toc
            file="toc/toctasks.xml"
            primary="false">
      </toc>
   </extension>

</plugin>
